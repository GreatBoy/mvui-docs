#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: 20px 0

.widget-title
  color: #b2b2b2;
  margin: 10px 0;

.widget
  color: color-sidebar-text
  text-shadow: 0 1px #fff
  padding: 0px 10px;
  border-radius: 3px

  a
    color: #525558
    text-decoration: none
    line-height 40px
    display block
    &:hover
      text-decoration: none
      color color-link
    &.selected
      color color-link
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc