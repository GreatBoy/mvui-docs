if leftnav is bottom
  @import "leftnav-bottom"
else
  @import "leftnav-aside"

.outer
  max-width 90%
  padding 0 15px
.main-nav-link
  color #555
#main-nav
  float right
.article
  padding 20px
  margin 0px
.leftnav_bg
  background: white;
  border-radius: 6px;
  position: relative
#main-logo
  float left
body
  background #edf2f6 !important
  color #525558
#main
  width 83.33333333%
  margin 0px
  float: right
#leftnav
    width 16.66666667%
    .widget
      ul, ol
        list-style: none
        margin: 0
        ul, ol
          margin: 0 20px
        ul
          list-style: disc
        ol
          list-style: decimal

    .category-list-count
    .tag-list-count
    .archive-list-count
      padding-left: 5px
      color: color-grey
      font-size: 0.85em
      &:before
        content: "("
      &:after
        content: ")"

    .tagcloud
      a
        margin-right: 5px
        display: inline-block






#index-container
  position: fixed; 
  width: 100%;
  height: 100%; 
  background: white;
  left: 0px;
  top: 0px;
  #main-nav
    display block
    float none
    width 258px
    margin 0px auto
    height 64px
    position relative
    margin-top 150px
  .index-logo
    width 300px
    height 179px
    display block
    margin 0px auto
  .index-desc
    color  #666
    font-size 20px
    font-weight bolder
    text-align center

#main-right
  width: 350.12px;
